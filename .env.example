# Multi-Agent Loan Automation System - Environment Configuration
# Copy this file to .env and replace placeholder values with your actual credentials

# ============================================================================
# AZURE AI PROJECT CONFIGURATION
# ============================================================================
# Azure AI Project details for agent orchestration
AZURE_AI_PROJECT_ENDPOINT=https://your-project-endpoint.azure.com
AZURE_AI_RESOURCE_GROUP=your-resource-group
AZURE_SUBSCRIPTION_ID=your-subscription-id-here
AZURE_PROJECT_NAME=your-ai-project-name

# ============================================================================
# AZURE OPENAI CONFIGURATION
# ============================================================================
# Azure OpenAI service for GPT-4o-mini model
AZURE_OPENAI_DEPLOYMENT_NAME=gpt-4o-mini
AZURE_OPENAI_ENDPOINT=https://your-openai-service.openai.azure.com/
AZURE_OPENAI_API_KEY=your-openai-api-key-here
AZURE_OPENAI_API_VERSION=2024-02-15-preview

# ============================================================================
# AZURE COSMOS DB CONFIGURATION
# ============================================================================
# Cosmos DB for customer data and loan applications
COSMOS_DB_ENDPOINT=https://your-cosmos-account.documents.azure.com:443/
COSMOS_DB_KEY=your-cosmos-primary-key-here
COSMOS_DB_DATABASE_NAME=GlobalTrustBank
COSMOS_DB_CONTAINER_NAME=loan_applications

# ============================================================================
# AZURE AI SEARCH CONFIGURATION
# ============================================================================
# AI Search service for document indexing and retrieval
AZURE_SEARCH_ENDPOINT=https://your-search-service.search.windows.net
AZURE_SEARCH_KEY=your-search-admin-key-here
AZURE_SEARCH_API_VERSION=2023-11-01

# Agent-specific search indices
IDENTITY_INDEX=identity-verification-index
INCOME_INDEX=income-assessment-index
GUARANTOR_INDEX=guarantor-verification-index
INSPECTION_INDEX=collateral-inspection-index
VALUATION_INDEX=property-valuation-index

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================
# Azure SQL Database for loan offer generation
DATABASE_SERVER=your-sql-server.database.windows.net
DATABASE_NAME=Global_Trust_Bank
DATABASE_USERNAME=your-database-username
DATABASE_PASSWORD=your-database-password
DATABASE_PORT=1433

# Connection string format (alternative to individual parameters)
DATABASE_CONNECTION_STRING=Driver={ODBC Driver 17 for SQL Server};Server=tcp:your-server.database.windows.net,1433;Database=Global_Trust_Bank;Uid=username;Pwd=password;Encrypt=yes;TrustServerCertificate=no;Connection Timeout=30;

# ============================================================================
# AZURE IDENTITY CONFIGURATION
# ============================================================================
# For managed identity and authentication
AZURE_CLIENT_ID=your-service-principal-client-id
AZURE_CLIENT_SECRET=your-service-principal-secret
AZURE_TENANT_ID=your-azure-tenant-id

# ============================================================================
# APPLICATION CONFIGURATION
# ============================================================================
# General application settings
DEFAULT_CUSTOMER_ID_PREFIX=CUST
LOG_LEVEL=INFO
ENVIRONMENT=development
DEBUG=true

# API Configuration
API_HOST=127.0.0.1
API_PORT=8000
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:3002

# ============================================================================
# AZURE LOGIC APPS CONFIGURATION
# ============================================================================
# Logic Apps for email automation
LOGIC_APP_EMAIL_ENDPOINT=https://your-logic-app.azurewebsites.net/api/send-email
LOGIC_APP_NOTIFICATION_ENDPOINT=https://your-logic-app.azurewebsites.net/api/send-notification

# ============================================================================
# AZURE KEY VAULT CONFIGURATION (Optional)
# ============================================================================
# For secure credential management
AZURE_KEY_VAULT_URL=https://your-keyvault.vault.azure.net/
KEY_VAULT_SECRET_COSMOS_KEY=cosmos-db-key
KEY_VAULT_SECRET_OPENAI_KEY=openai-api-key
KEY_VAULT_SECRET_SEARCH_KEY=search-admin-key

# ============================================================================
# CONTENT UNDERSTANDING CONFIGURATION
# ============================================================================
# Azure AI Document Intelligence for document processing
AZURE_DOCUMENT_INTELLIGENCE_ENDPOINT=https://your-document-intelligence.cognitiveservices.azure.com/
AZURE_DOCUMENT_INTELLIGENCE_KEY=your-document-intelligence-key

# Azure AI Vision for image analysis
AZURE_COMPUTER_VISION_ENDPOINT=https://your-computer-vision.cognitiveservices.azure.com/
AZURE_COMPUTER_VISION_KEY=your-computer-vision-key
