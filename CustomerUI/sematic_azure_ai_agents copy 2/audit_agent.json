      "post": {
        "tags": [
          "ExecuteFunction"
        ],
        "summary": "Create Audit Record",
        "description": "Create a new audit record.\nReturns the created audit record as confirmation.",
        "operationId": "CreateAuditRecord",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
